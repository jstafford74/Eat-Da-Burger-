<div class="container">

  <h1 class="pageHead">Eat Da Burger!!</h1>

  <div class="burgerListsSection">
    <div class="row">
      <div class="col-6 ">
        <ul class="burgerList">
          {{#each burgers}}
          {{#unless devoured}}
         
          <div class="burgerItem clearfix">
            <span>{{burger_name}}</span>
            <button class="devourButton float-right" value={{id}}>
              Devour!
            </button>
          {{!-- <img src="../assets/img/burger.jpg" class="devourimg float-right" style="max-height: 100px" data-id={{id}}> --}}
          </div>
          <br>
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-6">
        <ul class="burgerList">
          {{#each burgers}}
          {{#if devoured}}
          <div class="burgerItem devoured">
            <span>{{burger_name}}</span>
          </div>
          <br>
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
    {{!-- <ul class="burgerList">
      {{#each burgers}}
      {{#unless devoured}}

      <br>
      {{/unless}}
      {{/each}}
    </ul> --}}


  </div>


  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>



    <button type="submit">Add Burger</button>
  </form>
</div>